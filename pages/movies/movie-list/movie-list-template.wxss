@import "../stars/stars-template.wxss";
@import "../movie/movie-template.wxss";

.movie-list-container{
  background-color:#fff;
  display:flex;
  flex-direction:column;
}

.movie-head{
  padding:30rpx 20rpx 22rpx;
}

.slogan{
  font-size:24rpx;
  line-height:47rpx;
  display:inline-block;
  height:47rpx;
}
.inner-container{
  margin:0 auto 20rpx;
}
.more{
  display:inline-block;
  float:right;
  font-size:24rpx; 
  height:47rpx;
  line-height:47rpx;
}


.more-text{
  vertical-align:middle;
  margin-right:10rpx;
  color:#1f4ba5;
}

.more-img{
  width:9rpx;
  height:16rpx;
  vertical-align:middle;
}

.movies-container{
  display:flex;
  flex-direction:row;
}