.big-container {
  background-color: #f2f2f2;
  display:flex;
  flex-direction:column;
  width:100%;
  box-sizing: border-box;
}

.movies-template {
  margin-bottom: 30rpx;
}

.search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
