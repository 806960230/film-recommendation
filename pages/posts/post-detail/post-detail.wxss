

.post-detail-container{
  display:flex;
  flex-direction: column;
  padding:0;
  margin:0; 
}
.audio{
  position:absolute;
  top:15%;
  left:50%;
  z-index:5;
  width:50px;
  height:50px;
  margin-left:-25px;
}
.head-image{
  width:100%;
  height:460rpx;
}

.author-date{
  flex-direction:row;
  margin-left:30rpx;
  margin-top:20rpx;
  float:left;
}

.avatar{
  height:64rpx;
  width:64rpx;
  vertical-align:middle;
  float:left;
  border-radius:50%;
}

.author{
   font-size:30rpx;
   font-weight:300;
   margin-left:20rpx;
   vertical-align:middle;
   color:#666;

}

.const-text{
  font-size:24rpx;
  color:#999;
  margin-left:20rpx;

}

.date{
   font-size:24rpx;
   margin-left:30rpx;
   vertical-align:middle;
   color:#999;

}

.title{
  margin-left:40rpx;
  font-size:36rpx;
  font-weight:700;
  margin-top:30rpx;
  letter-spacing:2px;
  color:#4b556c;
 
}
.tool{
  margin-top:20px;
}

.circle-img{
  float:right;
  margin-right:40rpx;
  vertical-align:middle;
  width:50px;
  height:50px;
}
.share-img{
  width:100%;
  height:100%;
  border-radius:50%;
}

.detail{
  color:#666;
  margin-left:30rpx;
  margin-top:20rpx;
  margin-right:30rpx;
  line-height:44rpx;
  letter-spacing:2px;
}